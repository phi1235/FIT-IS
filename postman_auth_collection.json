{
    "info": {
        "name": "Auth API - Local JWT",
        "_postman_id": "auth-local-jwt-2024",
        "description": "Register, Login và Change Password APIs với Local JWT Token",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:8082",
            "type": "string"
        },
        {
            "key": "accessToken",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "1. Register User",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"testuser@example.com\",\n  \"password\": \"12345678\",\n  \"firstName\": \"Test\",\n  \"lastName\": \"User\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/auth/register",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "auth",
                        "register"
                    ]
                },
                "description": "Đăng ký user mới - Public endpoint"
            },
            "response": []
        },
        {
            "name": "2. Login - Database (Local JWT)",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "var jsonData = pm.response.json();",
                            "if (jsonData.token && jsonData.token.accessToken) {",
                            "    pm.collectionVariables.set('accessToken', jsonData.token.accessToken);",
                            "    console.log('Token saved to accessToken variable');",
                            "}"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"12345678\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/auth/login/database",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "auth",
                        "login",
                        "database"
                    ]
                },
                "description": "Login với Database Provider - Keycloak validate, Backend sinh Local JWT"
            },
            "response": []
        },
        {
            "name": "3. Login - Federation (Local JWT)",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "var jsonData = pm.response.json();",
                            "if (jsonData.token && jsonData.token.accessToken) {",
                            "    pm.collectionVariables.set('accessToken', jsonData.token.accessToken);",
                            "    console.log('Token saved to accessToken variable');",
                            "}"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"12345678\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/auth/login/federation",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "auth",
                        "login",
                        "federation"
                    ]
                },
                "description": "Login với Federation Provider - Remote validate + Local JWT"
            },
            "response": []
        },
        {
            "name": "4. Change Password",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{accessToken}}",
                        "description": "Local JWT Token từ login response"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"username\": \"testuser\",\n  \"currentPassword\": \"12345678\",\n  \"newPassword\": \"newPassword123\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/auth/password/change",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "auth",
                        "password",
                        "change"
                    ]
                },
                "description": "Đổi password - Yêu cầu Local JWT Authentication"
            },
            "response": []
        },
        {
            "name": "5. Get Current User (Test JWT)",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{accessToken}}",
                        "description": "Local JWT Token"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/api/users/me",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "users",
                        "me"
                    ]
                },
                "description": "Test endpoint với Local JWT - verify token hoạt động"
            },
            "response": []
        }
    ]
}