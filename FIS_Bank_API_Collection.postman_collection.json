                        ],
                        "url": {
                            "raw": "{{keycloakUrl}}/realms/{{realm}}/protocol/openid-connect/userinfo",
                            "host": [
                                "{{keycloakUrl}}"
                            ],
                            "path": [
                                "realms",
                                "{{realm}}",
                                "protocol",
                                "openid-connect",
                                "userinfo"
                            ]
                        }
                    }
                },
